const App: React.FC = () => {
  const [projects, setProjects] = useState<Project[]>([]);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    async function fetchProjects() {
      try {
        if (!supabase) {
           console.warn("Supabase configuration missing, using mock data.");
           setProjects(MOCK_PROJECTS);
           setLoading(false);
           return;
        }

        const { data, error } = await supabase
          .from('innovations')
          .select('*')
          .order('created_at', { ascending: false });
        
        if (error) throw error;
        
        const mappedData: Project[] = (data || []).map(item => ({
          id: item.id.toString(),
          title: item.title,
          tagline: item.tagline || 'No tagline provided',
          description: item.description,
          category: (item.category as any) || 'Technology',
          creatorId: item.creator_id || 'u-db',
          goalAmount: item.funding_goal || 0,
          currentAmount: item.current_amount || 0,
          image: item.image_url || `https://picsum.photos/seed/${item.id}/800/600`,
          skillSlots: item.skill_slots || [
             { id: 's1', title: 'Collaborator', capacity: 3, filled: 0 }
          ],
          status: item.status || 'Active',
          createdAt: item.created_at
        }));

        setProjects(mappedData.length > 0 ? mappedData : MOCK_PROJECTS);
      } catch (err) {
        console.error("Gagal mengambil data dari Supabase:", err);
        setProjects(MOCK_PROJECTS);
      } finally {
        setLoading(false);
      }
    }

    fetchProjects();
  }, []);

  return (
    <HashRouter>
      <div className="min-h-screen flex flex-col pt-16">
        <Navbar />
        <main className="flex-1 max-w-7xl mx-auto w-full p-6">
          {loading ? (
            <div className="flex flex-col items-center justify-center py-40 space-y-4">
              <div className="w-12 h-12 border-4 border-indigo-600 border-t-transparent rounded-full animate-spin"></div>
              <p className="text-slate-500 font-medium animate-pulse">Connecting to InnoHub Network...</p>
            </div>
          ) : (
            <Routes>
              <Route path="/" element={<LandingPage projects={projects} />} />
              <Route path="/project/:id" element={<ProjectDetail projects={projects} />} />
              <Route path="/dashboard" element={<Dashboard projects={projects} />} />
              <Route path="/post" element={<PostIdea onAdd={(p) => setProjects([p, ...projects])} />} />
              <Route path="/admin" element={<AdminPanel projects={projects} />} />
            </Routes>
          )}
        </main>
        <Footer />
      </div>
    </HashRouter>
  );
};

export default App;


